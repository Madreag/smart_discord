# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/smart_discord
DATABASE_READONLY_URL=postgresql+asyncpg://readonly:readonly@localhost:5432/smart_discord

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Redis
REDIS_URL=redis://localhost:6379

# Discord Bot
DISCORD_TOKEN=your-bot-token
DISCORD_CLIENT_ID=your-client-id
DISCORD_CLIENT_SECRET=your-client-secret

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose your provider: openai, anthropic, or xai
LLM_PROVIDER=openai

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# xAI / Grok (https://console.x.ai/)
XAI_API_KEY=
XAI_MODEL=grok-beta
XAI_BASE_URL=https://api.x.ai/v1

# =============================================================================
# Embeddings Configuration
# =============================================================================
# Choose: openai, local (sentence-transformers - free, no API key)
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Auth.js (generate with: openssl rand -base64 32)
AUTH_SECRET=your-auth-secret

# Optional: Tavily for web search
TAVILY_API_KEY=
